@model InsuranceDatabase.Documents

@{
    ViewData["Title"] = "Delete";
}

    <div>
        <hr />
        <h3>Ви впевнені, що хочете видалити договір ?</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Number)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Number)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Sum)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Sum)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Broker)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Broker.FullName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Client)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Client.FullName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Type)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Type.Type)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" value="@ViewBag.BrokerDocId" name="BrokerId" />
            <input type="hidden" value="@ViewBag.ClientDocId" name="ClientId" />
            <input type="hidden" value="@ViewBag.TypeDocId" name="TypeId" />
            <input type="submit" value="Видалити" class="btn btn-danger" /> |
            <a asp-action="Index" asp-route-brokerId="@ViewBag.BrokerDocId" asp-route-clientId="@ViewBag.ClientDocId" asp-route-typeId="@ViewBag.TypeDocId">Повернутись</a>
        </form>
    </div>
