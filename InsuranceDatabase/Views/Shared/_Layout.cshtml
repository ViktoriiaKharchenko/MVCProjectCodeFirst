<!DOCTYPE html>
<html>
<globalization culture="en-US" uiCulture="en" />

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InsuranceDatabase</title>



    <link href="~/lib/bootstrap/dist/css/bootstrap_flatly.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/my style.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">InsuranceDatabase</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor03">
                    @if (User.IsInRole("broker") || User.IsInRole("admin"))
                    {

                        <ul class="navbar-nav mr-auto">

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Categories" asp-action="Index">Категорії<span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Brokers" asp-action="Index">Брокери</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Documents" asp-action="Index">Договори</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Clients" asp-action="Index">Клієнти</a>
                            </li>
                            @if (User.IsInRole("admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Roles" asp-action="UserList">Права доступу</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Users" asp-action="Index">Список користувачів</a>
                                </li>
                            }

                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav mr-auto">

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Categories" asp-action="Index">Категорії<span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Brokers" asp-action="Index">Брокери</a>
                            </li>

                        </ul>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {


                        <ul class="navbar-nav">
                            <li><b><@User.Identity.Name></b></li>
                            <li class="nav-item">
                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <input type="submit" value="Вихід" class="makealink" asp-controller="Account" asp-action="Logout" />
                                    <span class="sr-only">(current)</span>
                                </form>
                            </li>
                        </ul>

                    }
                    else
                    {
                        <ul class="navbar-nav">

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Реєстрація<span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Вхід<span class="sr-only">(current)</span></a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer id="footer" class="footer py-3 text-muted" style="bottom: -200px;">
        <div class="container">
            <div class="row">
                <div class="footer_content">
                    <div class="col-lg-12">

                        <div class="contacts">
                            <h3>Contacts</h3>
                            <ul>
                                <li class="d-flex flex-wrap">Адреса: <span>  м.Київ, вул. Матеюка 20</span></li>
                                <li class="d-flex flex-wrap">Телефон: <a href="tel:+38095-488-44-50">  +38095-488-44-50</a></li>
                                <li class="d-flex flex-wrap">Електронна адреса: <a href="mailto:insurance.database@gmail.com">insurance.database@gmail.com</a></li>
                            </ul>
                        </div>

                    </div>

                </div>
            </div>
        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.css">

    @RenderSection("Scripts", required: false)
</body>
</html>
