@model IEnumerable<InsuranceDatabase.Clients>

@{
    ViewData["Title"] = "Index";
}

<h1>Клієнти</h1>
<link rel="stylesheet" type="text/css" href="~/css/style3.css">
<meta name="viewport" content="width=device-width, initial-scale=1">
